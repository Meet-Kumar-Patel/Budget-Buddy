import json
import boto3

dynamodb = boto3.resource('dynamodb')
table = dynamodb.Table('UserExpense')

def lambda_handler(event, context):
    username = event['username']
    try:
        response = table.get_item(
            Key={
                'username': username,
            }
        )
        
        if 'Item' in response:
            user_data = response['Item']
            return {
                'statusCode': 200,
                'body': json.dumps({'message': 'User data fetched successfully'}),
                'data': user_data
                
            }
        else:
            return {
                'statusCode': 404,
                'body': json.dumps({'message': 'User not found'})
            }

    except Exception as e:
        print(e)
        
        return {
            'statusCode': 500,
            'body': json.dumps({'message': 'Failed to fetch user data'})
        }
